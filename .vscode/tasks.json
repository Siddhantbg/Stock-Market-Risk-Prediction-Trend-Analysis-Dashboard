{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Flask API",
            "type": "shell",
            "command": "python",
            "args": ["api/app.py"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start React Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build"
        },
        {
            "label": "Install Frontend Dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        }
    ]
}
